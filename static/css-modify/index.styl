@import '../../bower_components/swiper/dist/css/swiper.min.css'
@import '../../bower_components/normalize.css/normalize.css'

.clearfix:after 
    visibility: hidden
    display: block
    font-size: 0
    content: " "
    clear: both
    height: 0

.clearfix   
    display:inline-table
    height:1%
    display:block

@-webkit-keyframes invite-logo
    20%,60%
        -webkit-transform:rotate(15deg)
    40%,80%
        -webkit-transform:rotate(-15deg)
    100%
        -webkit-transform:rotate(0deg)

@-webkit-keyframes flower
    0%
        -webkit-transform:scale(0.3)
        opacity:0
    60%
        -webkit-transform:scale(1)
        opacity:1
    100%
        -webkit-keyframes:scale(1.2)
        opacity:0
animation(time,name,delay) 
    -webkit-animation-duration:time
    -webkit-animation-name:name
    -webkit-backface-visibility: hidden
    -webkit-animation-timing-function: ease
    -webkit-animation-fill-mode: both
    -webkit-animation-delay:delay
* 
    -webkit-user-select: none
    -ms-user-select: none
    -moz-user-select: none
    -khtml-user-select: none
    user-select: none
    -webkit-touch-callout:none
    -webkit-tap-highlight-color:transparent

background(image) 
    height:100%
    width:100%
    position:relative
    background-image:url('/static/image/'+image)
    background-repeat:no-repeat
    background-position:bottom center
    background-size:100% 100%
    z-index:1

image-wauto(image) 
    background-image:url('/static/image/'+image)
    background-repeat:no-repeat
    background-position:top center
    background-size:100% auto

image-hauto(image) 
    background-image:url('/static/image/'+image)
    background-repeat:no-repeat
    background-position:top center
    background-size:auto 100%

image-fit(image) 
    background-image:url('/static/image/'+image)
    background-repeat:no-repeat
    background-position:top center
    background-size:100% 100%

.up 
    -webkit-animation-name:up-animation
    -webkit-animation-duration: 1.5s!important
    -webkit-animation-timing-function: ease
    -webkit-animation-iteration-count:infinite
    -webkit-animation-fill-mode:both
    image-wauto('up.png')
    height:0.08rem
    width:0.06rem
    position:absolute
    bottom:0
    z-index:5
    left:0.47rem

.music 
    image-wauto('music.png')
    width:0.12rem
    height:0.12rem
    z-index:500000
    top:0.1rem
    position:absolute
    right:0.03rem

.music-play                                                                    
    -webkit-animation-name:ratote
    -webkit-backface-visibility: hidden
    -webkit-animation-duration: 3s 
    -webkit-animation-timing-function: linear
    -webkit-animation-iteration-count:infinite
    -webkit-animation-fill-mode: both
 

